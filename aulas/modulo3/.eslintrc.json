{
  "parser": "babel-eslint",
  "extends": ["airbnb", "plugin:react-native/all"],
  "env": {
    "browser": true,
    "jest": true
  },
  "plugins": ["react-native", "jsx-a11y", "import"],
  "rules": {
    "react/jsx-filename-extension": [
      "error",
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "global-require": "off",
    "import/prefer-default-export": "off",
    "no-unused-vars": [
      "error",
      {
        "argsIgonorePattern": "^_"
      }
    ]
  },
  "settings": {
    "import/resolver": "babel-plugin-root-import"
  },
  "globals": {
    "__DEV__": true
  }
}
